@model ItemVM

@{
    ViewData["Title"] = "Edit";
    ViewData["Main"] = "Items";
    var uoms = (SelectList)ViewBag.UOMS;
}


<div class="content-wrapper">
    <div class="page-title">
        <span class="title-data" data-main='@(ViewData["Main"])'>@ViewData["Title"]</span>
    </div>
    <div class="add__project bg-white p-4 shadow">
        <form asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group row">
                <label asp-for="Name" class="col-xl-2 col-lg-3 col-form-label"></label>
                <div class="col-xl-10 col-lg-9">
                    <input asp-for="Name" class="form-control" />
                    <small><span asp-validation-for="Name" class="form-text text-danger"></span></small>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Description" class="col-xl-2 col-lg-3 col-form-label"></label>
                <div class="col-xl-10 col-lg-9">
                    @Html.TextAreaFor(e => e.Description, htmlAttributes: new { @class = "form-control" })
                    <small><span asp-validation-for="Description" class="form-text text-danger"></span></small>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="UomId" class="col-xl-2 col-lg-3 col-form-label"></label>
                <div class="col-xl-10 col-lg-9">
                    <select asp-for="UomId" class="form-control" asp-items="@uoms">
                        <option value="">select</option>
                    </select>
                    <small><span asp-validation-for="UomId" class="form-text text-danger"></span></small>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Quantity" class="col-xl-2 col-lg-3 col-form-label"></label>
                <div class="col-xl-10 col-lg-9">
                    <input asp-for="Quantity"  class="form-control" />
                    <small><span asp-validation-for="Quantity" class="form-text text-danger"></span></small>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Price" class="col-xl-2 col-lg-3 col-form-label"></label>
                <div class="col-xl-10 col-lg-9">
                    <input asp-for="Price"  class="form-control" />
                    <small><span asp-validation-for="Price" class="form-text text-danger"></span></small>
                </div>
            </div>

            @Html.HiddenFor(e=>e.Id)
            <div class="form-group d-flex justify-content-end">
                <input type="submit" class="btn btn-primary" value="Save" />
                <a asp-action="Index" class="btn btn-secondary d-inline-block ml-3">Cancel</a>
            </div>
        </form>
    </div>
</div>
